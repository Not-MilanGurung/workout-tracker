<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.cell.CheckBoxListCell?>

<VBox fx:controller="beds.main.controllers.ExerciseDetailsController"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" alignment="CENTER"
      stylesheets="@../css/dark-theme.css">

    <Label text="Exercise Details" style="-fx-font-size: 22px; -fx-text-fill: white;"/>

    <ListView fx:id="setListView">
        <cellFactory>
            <CheckBoxListCell fx:id="setCheckBox" />
        </cellFactory>
    </ListView>

    <Button text="+ Add Set" fx:id="addSetButton" onAction="#handleAddSet"/>
</VBox>
